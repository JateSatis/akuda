<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.akuda.screens.account.AccountFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/accountGoBackButton"
        style="@style/GoBackButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/accountImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/accountGoBackButton" />

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/accountEditNickname"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/edit_text_background"
        android:hint="Введите свое имя"
        android:paddingHorizontal="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/accountImage"
        app:layout_constraintTop_toTopOf="@+id/accountImage" />

    <TextView
        android:id="@+id/accountEmailText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/accountImage"
        app:layout_constraintEnd_toEndOf="@+id/accountEditNickname"
        app:layout_constraintStart_toStartOf="@+id/accountEditNickname"
        app:layout_constraintTop_toBottomOf="@+id/accountEditNickname"
        tools:text="JateSatis@gmail.com" />

    <TableLayout
        android:id="@+id/publicationsTableLayout"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/accountEmailText"
        app:layout_constraintStart_toStartOf="@+id/accountImage"
        app:layout_constraintTop_toBottomOf="@id/accountImage" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/publicationsViewPager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/accountEditNickname"
        app:layout_constraintStart_toStartOf="@+id/accountImage"
        app:layout_constraintTop_toBottomOf="@+id/publicationsTableLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>